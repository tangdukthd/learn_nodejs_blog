<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group mb-4">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name"/>
        </div>
        <div class="form-group mb-4">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description"/>
        </div>
        <div class="form-group mb-4">
            <label for="image">Hình ảnh mô tả</label>
            <input type="text" class="form-control" id="image" name="image"/>
        </div>
        <div class="videoID mb-4">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" id="videoID" name="videoID"/>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Đăng khóa học</button>
    </form>
</div>